            </Border>
            <!-- Repeat above Border for 10 total -->
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="S" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="D" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="F" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="G" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="H" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="J" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="K" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="L" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
