            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="P" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Container for the Flexbox Row -->
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <!-- Each "Div" -->
            <Border BorderThickness="2" CornerRadius="10" 
            Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="A" FontSize="24" FontWeight="Medium" Foreground="#FFB5B5B5"/>
