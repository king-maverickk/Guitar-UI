                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Container for the Flexbox Row -->
        <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <!-- Each "Div" -->
            <Border BorderThickness="2" CornerRadius="10" BorderBrush="Black" 
            Width="80" Height="80" Margin="5">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="A" FontSize="24" FontWeight="Medium"/>
                </StackPanel>
            </Border>
            <!-- Repeat above Border for 10 total -->
            <Border BorderThickness="2" CornerRadius="10" BorderBrush="Black" 
