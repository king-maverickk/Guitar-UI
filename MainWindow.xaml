<Window x:Class="Guitar_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guitar_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized" PreviewKeyDown="Print_Key_Down">
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">

        <!-- <Grid x:Name="rowNumbers" Height="80" Background="BurlyWood" Margin="0,116,0,238"/> -->

        <!-- Container for the Top Div -->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100">
            <!-- Each "Div" -->
            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                    BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#FF54A0CB">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="3" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_7" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#FF54A0CB">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="3" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_7" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#D8763E">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="4" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_10" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                    BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#FF54A0CB">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="3" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_7" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                    BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#EBD24A">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="2" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_5" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                    BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#C53F32">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="1" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_3" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <Border BorderThickness="2" CornerRadius="10" Padding="5"
                    BorderBrush="Black" Margin="5,0,0,0">
                <Border CornerRadius="10" Background="#6A8F33">
                    <StackPanel HorizontalAlignment="Center" Width="100" >
                        <TextBlock Text="Q" FontSize="32" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                        <TextBlock Text="A_2" FontSize="16" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#F2F2F2" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Repeat above Border for 5 total -->
        </StackPanel>

        <!-- Container for the Flexbox Row -->
        <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <!-- Each "Div" -->
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="#FFC53F32">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="1" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Border>
            <!-- Repeat above Border for 10 total -->
            <Border BorderThickness="2" CornerRadius="10" 
                Width="80" Height="80" Margin="5" Background="#FFEBD24A">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="2" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                Width="80" Height="80" Margin="5" Background="#FF54A0CB">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="3" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Background="#FFD8763E">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="4" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="5" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="6" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="7" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="8" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="9" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
        Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="0" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Container for the Flexbox Row -->
        <StackPanel Orientation="Horizontal" Margin="50,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <!-- Each "Div" -->
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="#FF6A8F33">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Q" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Border>
            <!-- Repeat above Border for 10 total -->
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.291" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="W" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Opacity="0.3" Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="E" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="R" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="T" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Y" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="U" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="I" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
                </StackPanel>
            </Border>
            <Border BorderThickness="2" CornerRadius="10" 
                    Width="80" Height="80" Margin="5" Background="Black" Opacity="0.3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="O" FontSize="24" HorizontalAlignment="Center" FontWeight="Medium" Foreground="#FFB5B5B5"/>
